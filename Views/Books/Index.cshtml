@model ICollection<Book_Store.Models.Book>


<h3 class="text-center">All of Books</h3>

<p>
    <a class="btn btn-danger mt-3" asp-action="Create">Create New</a>
</p>
<table class="table table-primary mt-3">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
              Description
            </th>
            <th>
               Image
            </th>
            <th>
               Price
            </th>
            <th>
               Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Description
            </td>
            <td>
                <img src="@item.Image" width="200" height="150"/>
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Category.Description 
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"  
                onclick="return confirm('Are you sure you want to delete this student?');">
                Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
